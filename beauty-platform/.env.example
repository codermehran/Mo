# Shared
APP_ENV=development

# Database
POSTGRES_DB=beauty_platform
POSTGRES_USER=beauty_user
POSTGRES_PASSWORD=beauty_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# Backend
BACKEND_PORT=8000
SECRET_KEY=change-me
DEBUG=true
ALLOWED_HOSTS=*
CORS_ALLOWED_ORIGINS=http://localhost:3000
JWT_ACCESS_TTL_MIN=15
JWT_REFRESH_TTL_DAYS=14
KAVENEGAR_API_KEY=your-kavenegar-key
KAVENEGAR_TEMPLATE_LOGIN=otp-login
KAVENEGAR_TEMPLATE_RECOVERY=otp-recovery
BITPAY_API_KEY=your-bitpay-key
BITPAY_WEBHOOK_SECRET=change-me
BITPAY_RETURN_URL=http://localhost:3000/app/billing/return
BITPAY_WEBHOOK_URL=http://localhost:8000/api/billing/webhook/bitpay
FREE_MAX_STAFF=1
FREE_MAX_PATIENTS=200
FREE_MAX_APPOINTMENTS_PER_MONTH=300

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_BASE_URL=http://backend:${BACKEND_PORT}
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME=BeautyClinic
